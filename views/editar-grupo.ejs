<main class="contenedor contenedor-formularios no-padding">
    <h1>
        <%=nombrePagina%>
    </h1>
    <form class="default-form" method="post">
        <div class="campo">
            <label>Nombre</label>
            <input type="text" value="<%- grupo.nombre %>" name="nombre" placeholder="Nombre grupo">
        </div>
        <div class="campo descripcion">
            <label>Descripci√≥n</label>
            <div class="contenido editor">
                <input type="hidden" id="x" name="descripcion" value="<%= grupo.descripcion %>">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label>Categoria</label>
            <select name="categoria">
                <option value="categoriaId" disabled>-- Elige una categoria --</option>
                <% categorias.forEach(categoria=> { %>
                    <option value="<%= categoria.id %>" <%=(grupo.categoriaId==categoria.id) ? 'selected' :'' %>>
                        <%= categoria.nombre %>
                    </option>
                    <% }) %>
            </select>
        </div>
        <div class="campo">
            <label>Sitio web</label>
            <input type="url" name="url" placeholder="Sitio web" value="<%- grupo.url %>">
            <!-- Tag con '-' para output sin escape -->
        </div>
        <div class="campo enviar">
            <input type="submit" value="Guardar cambios" class="btn btn-rosa">
        </div>
    </form>
</main>